<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="in.org.celesta2k17.activities.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/eamil_id_wrapper_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >

            <EditText
                android:id="@+id/email_id_signin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableTint="@color/colorSignIn"
                android:hint="@string/email_id_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:drawablePadding="8dp"
                android:textColor="@color/colorPrimaryLight"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_wrapper_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <EditText
                android:id="@+id/password_signin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_security_black_24dp"
                android:drawableTint="@color/colorSignIn"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:drawablePadding="8dp"
                android:textColor="@color/colorPrimaryLight" />
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textColor="@color/colorSignUp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:textSize="16sp"
                android:focusable="true" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorSponsors"
        android:text="@string/SignIn" />
</LinearLayout>
